{% assign header_menu      = section.settings.header_menu %}
{% assign header_logo      = section.settings.header_logo %}
{% assign header_menu_logo = section.settings.header_menu_logo %}
{% assign header_menu_text = section.settings.header_menu_text %}

<header class="h-[60px] md:h-[100px] relative top-0 left-0 w-full z-50 flex flex-col justify-center items-center">
    <div class="header-main bg-beige py-[16px] md:py-[26px] px-[12px] container relative flex justify-between z-[55]">
        <div class="max-w-[104px] max-h-[28px] lg:max-w-[180px] lg:max-h-[48px] w-full h-full flex justify-center items-center">
            {{ header_logo }}
        </div>

        <div class="links flex space-x-[35px] items-center">
            <div class="flex space-x-[35px] hidden lg:flex">
                {% for link in header_menu.links %}
                    {% assign url   = link.url %}
                    {% assign title = link.title  %}

                    <a href="{{ url }}" class="font-platform-medium tracking-[0.25em] text-[14px] leading-[14px] uppercase">{{ title }}</a>
                {% endfor %}
            </div>
            <div class="flex space-x-[25px]">
                <div class="search cursor-pointer">
                    <svg width="20" height="21" viewBox="0 0 20 21" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="8.5" cy="8.5" r="7.5" stroke="black"/>
                        <path d="M13.3346 14.3345L19.3346 20.3345" stroke="black"/>
                    </svg>
                </div>

                <div class="cart cursor-pointer relative">
                    <svg width="16" height="21" viewBox="0 0 16 21" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="0.5" y="7.5" width="15" height="13" stroke="black"/>
                        <path d="M13 7C13 3.68629 10.7614 1 8 1C5.23858 1 3 3.68629 3 7" stroke="black"/>
                    </svg>

                    <span class="cart-items-count flex justify-center items-center w-[16px] h-[16px] rounded-full bg-black text-white absolute top-[-4px] right-[-6px] text-[12px] {% if cart.item_count == 0 %}hidden{% endif %}">
                        {{ cart.item_count }}
                    </span>
                </div>

                <div class="burger w-[24px] flex lg:hidden justify-center items-center cursor-pointer">
                    <svg class="burger-icon" width="24" height="15" viewBox="0 0 24 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <line x1="0.669434" y1="0.5" x2="22.6694" y2="0.5" stroke="black"/>
                        <line x1="0.669434" y1="7.5" x2="22.6694" y2="7.5" stroke="black"/>
                        <line x1="0.669434" y1="14.5" x2="22.6694" y2="14.5" stroke="black"/>
                    </svg>

                    <svg class="close-icon hidden" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M0.5 15.5L15.5 0.499956" stroke="black"/>
                        <path d="M0.5 0.5L15.5 15.5" stroke="black"/>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    {% render 'header-mobile-menu',
        header_menu_logo: header_menu_logo,
        header_menu_text: header_menu_text
    %}
</header>

{% schema %}
{
    "name": "Header",
    "settings": [
        {
            "type": "link_list",
            "id": "header_menu",
            "label": "Menu"
        },
        {
            "type": "textarea",
            "id": "header_logo",
            "label": "Logo (svg)"
        },
        {
            "type": "textarea",
            "id": "header_menu_logo",
            "label": "Menu logo (svg)"
        },
        {
            "type": "textarea",
            "id": "header_menu_text",
            "label": "Menu text"
        }
    ]
}
{% endschema %}